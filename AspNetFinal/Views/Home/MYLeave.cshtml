@model AspNetFinal.Models.UserViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Leave</title>
    <!-- Bootstarp css -->
    <link rel="stylesheet" href="~/profile/bootstrap/css/bootstrap.min.css">
    <!-- Font awsome -->
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <!-- Table -->
    <link rel="stylesheet" href="~/profile/table/dataTables.bootstrap4.css">
    <!-- Custom style -->
    <link rel="stylesheet" href="~/profile/css/style.css">

</head>
<body>
    <section id="navbar_menu">
        <nav class="navbar navbar-dark navbar-expand-lg navbar-light bg-dark">
            <div class="container">                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">

                            <a class="nav-link" href="/Home/Index">HOME </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="sub_menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                LEAVE <i class="fas fa-angle-down fa-xs"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="sub_menu">
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target=".apply_leave">Apply Leave</a>
                                <a class="dropdown-item" href="/Home/MYLeave">My Leave</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" id="sub_menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                MY ACCOUNT <i class="fas fa-angle-down fa-xs"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="sub_menu">
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target=".change_password">Change Pasword</a>
                                <a class="dropdown-item" href="/UserLog/LogOut" data-toggle="modal" data-target="#log_out_modal">Log Out</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>

    <section id="profile">
        <div class="container">
            <div class="row">
                <div class="col-md-3 text-center">
                    <div class="profile_img">

                        <img src="~/Uploads/Images/@Model._employee.emp_photo" class="img-fluid">
                    </div>
                    <div class="user_about">
                        <h5>@Model._employee.emp_fullname</h5>
                        <span>Senior Android Developer</span>
                    </div>
                    <div class="work_for">
                        <p>
                            <b>@Model._employee.emp_work_status :</b>
                            <span>@Model._employee.emp_date_of_joining</span>
                        </p>
                    </div>
                    <hr>
                    <div class="user_points">
                        <div class="row">
                            <div class="col-md-4">
                                <h5>ff</h5>
                                <span>ATTENDANCE</span>
                            </div>
                            <div class="col-md-4">
                                <h5>25/452</h5>
                                <span>LEAVE</span>
                            </div>
                            <div class="col-md-4">
                                <h5>@Model._employee.Awards.Count()</h5>
                                <span>AWARDS</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="card mb-3">
                        <div class="card-header">
                            <i class="fas fa-tasks"></i> My Leave Applications
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Reason</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model._leave_app)
                                        {
                                            <tr>
                                                <td>@item.leave_date</td>
                                                <td>@item.leave_reason</td>
                                                <td>
                                                    <h5> <span class="badge badge-success">@item.Leave_status.status_name</span>  </h5>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="apply_modals">
        <div class="modal fade apply_leave" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-header">
                        <h4 class="modal-title" id="myLargeModalLabel">Apply Leave</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container">                           
                                @using (Html.BeginForm("MYLeave1", "Home"))
                                {
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Leave date : </label>
                                            <input type="date" class="form-control" name="leave_date">
                                        </div>                                        
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Leave resion : </label>
                                            <textarea class="form-control" name="leave_reason" style="height: 124px"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-success float-right">Submit</button>
                                    </div>
                                </div>
                                }                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="password_modals">
        <div class="modal fade change_password" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-header">
                        <h4 class="modal-title" id="myLargeModalLabel">Change Password</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    @Html.BeginForm("Changepass", "Home", FormMethod.Post)
                    {
                    <div class="modal-body">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Old Password : </label>
                                        <input type="password" class="form-control" name="oldpass"
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>New Password : </label>
                                        <input type="password" class="form-control" name="newpass">
                                    </div>
                                    <button type="submit" class="btn btn-outline-warning float-right">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </section>

    <section id="log_out">
        <div class="modal fade" id="log_out_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Log Out</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Do you wont exit this app ?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><a href="/Home/Leave">Cancel</a></button>
                        <button type="button" class="btn btn-primary"><a href="/LoginUser/LogOut/">Logout</a></button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/profile/js/jquery.js"></script>
    <script src="~/profile/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/profile/table/jquery.dataTables.js"></script>
    <script src="~/profile/table/dataTables.bootstrap4.js"></script>
    <script src="~/profile/js/script.js"></script>
</body>
</html>
